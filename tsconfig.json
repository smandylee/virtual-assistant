{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "apps/**/*",
    "core/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}